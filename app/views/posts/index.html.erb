<div class="m-4" style="display:flex; flex-direction:column; align-items:stretch; row-gap:2vh">
<section class="rounded-lg p-2 flex items-center">
    <img class="border" src="<%= @user.photo %>">
   <div class="border w-full h-36 ml-4">
        <h2 class="font-bold ml-4 mt-4 header-font"><%= @user.name %></h2>
    <div class="flex justify-end">
        <p class="text-red-600 mt-16 mr-2">Number of posts: <%= @user.posts_counter %></p>
        </div>
    </div>
</section>
<% @posts.each do |post| %>
<a href="<%= user_post_path(@user, post) %>">
    <div class="rounded-lg p-8 items-center border">
        <h3 class="font-bold">Post #<%= post.id %>: <%= post.title %></h3>
        <p class="mt-4"><%= post.text %> <%= post.recent_comments.length %></p>
        <h5 class="text-red-900 font-bold mt-4 text-right"> comments: <%= post.comments_counter %>, likes: <%= post.likes_counter %></h5>
    </div>
    </a>
  <% if post.recent_comments.any? %>
        <div class="border">
      <% post.recent_comments.each do |comment| %>
          <p class="font-bold"  style="padding: 1rem"> <%= comment.author.name %>: <%= comment.text %> <p>
      <% end %>
        </div>
    <% end %>
     <% end %>
     <button class="border p-6 font-bold mb-4" style="width:25%; margin-left:40%;">pagination</button>
</div>

