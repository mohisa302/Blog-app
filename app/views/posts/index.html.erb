<!DOCTYPE html>
<html>
  <head>
   <%= stylesheet_link_tag 'application.tailwind' %>
  </head>
  <body>
<div class="container">
<section class="rounded-lg p-8 flex items-center">
    <img class="h-48 border" src="<%= @user.photo %>">
    <div class="ml-4 text-center flex inform border">
      <h2 class="font-bold mr-4 mb-2 header-font"><%= @user.name %></h2>
      <p class="text-red-600 par">Number of posts: <%= @user.posts_counter %></p>
    </div>
</section>
<% @posts.each do |post| %>
    <div class="rounded-lg p-8 items-center border">
        <h3 class="font-bold">Post # post<%= post.id %></h3>
        <p class=""><%= post.text %> <%= post.recent_comments.length %></p>
        <h5 class="text-red-900 font-bold mt-4 text-right"> comments: <%= post.comments_counter %>, likes: <%= post.likes_counter %></h5>
    </div>
  <% if post.recent_comments.any? %>
      <% post.recent_comments.each do |comment| %>
        <div class="border">
          <p> <%= comment.author.name %>: Comment <%= comment.id %> <p>
        </div>
      <% end %>
    <% end %>
     <% end %>
</div>
<button class="border p-6  font-bold btn">pagination</button>
  </body>
</html>
