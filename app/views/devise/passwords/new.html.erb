<div style="display:flex; flex-direction: column; align-items: center; flex-wrap:wrap; align-content:center"> 
<h2 class="font-bold">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "border" %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class:"mb-2"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
