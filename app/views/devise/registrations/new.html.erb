<div style="display:flex; flex-direction: column; align-items: center; flex-wrap:wrap; align-content:center"> 
<h2 class="font-bold">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

<div class="field">
  <%= f.label :name %><br />
  <%= f.text_field :name, class: "border" %>
</div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "border" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "border" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mb-2 border" %>
  </div>

  <div class="actions" style="margin-left:5.7rem">
    <%= f.submit "Sign up", class: "border p-2 bg-blue-800", style:"color: white;" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</div>

